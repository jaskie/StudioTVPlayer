<UserControl x:Class="StudioTVPlayer.View.HelpDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:StudioTVPlayer.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance {x:Type vm:AboutDialogViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Separator Height="5" />
        <TextBlock>Keyboard shortcuts:</TextBlock>
        <Grid HorizontalAlignment="Left">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Right"></Setter>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Button Grid.Row="1" IsCancel="True" Command="{Binding CloseCommand}" Margin="20" HorizontalAlignment="Right" Content="OK" Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}"/>
    </StackPanel>
</UserControl>
