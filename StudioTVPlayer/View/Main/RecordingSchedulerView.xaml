<UserControl x:Class="StudioTVPlayer.View.Main.RecordingSchedulerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:StudioTVPlayer.View.Main"
             xmlns:vm="clr-namespace:StudioTVPlayer.ViewModel.Main"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:RecordingSchedulerViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Margin="10" FontSize="14" Command="{Binding AddRecordingScheduledItemCommand}" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <mah:FontIcon Glyph="&#xE710;" />
                <TextBlock Margin="5 0 0 0" FontWeight="Normal">Schedule recording</TextBlock>
            </StackPanel>
        </Button>
        <ListBox Grid.Row="1"
                 Style="{StaticResource ListBoxStyle}"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}"
                 d:ItemsSource="{d:SampleData ItemCount=5}"
            >
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:RecordingSchedulerItemViewModel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Grid.Column="1" Grid.Row="0" Style="{StaticResource SaveButtonStyle}" Command="{Binding UpdateCommand}"/>
                        <Button Grid.Column="1" Grid.Row="1" Style="{StaticResource RemoveButtonStyle}" Command="{Binding RemoveCommand}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
